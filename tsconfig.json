{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["ES2021"],
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"outDir": "./dist",
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*", "test/**/*"],
	"exclude": ["node_modules", "dist", "bench"]
}
