{
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 100,
		"bracketSpacing": false
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"trailingCommas": "es5",
			"arrowParentheses": "asNeeded"
		}
	},
	"json": {
		"formatter": { "indentStyle": "tab" }
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"recommended": true
			},
			"suspicious": {
				"recommended": true
			},
			"style": {
				"recommended": true
			},
			"complexity": {
				"recommended": true
			}
		}
	},
	"files": {
		"ignore": ["dist/", "node_modules"]
	}
}
